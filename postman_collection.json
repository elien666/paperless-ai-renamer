            "name": "Manual Scan",
            "request": {
                "method": "POST",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/api/scan?newer_than=2024-01-01",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "scan"
                    ],
                    "query": [
                        {
                            "key": "newer_than",
                            "value": "2024-01-01",
                            "description": "Optional: Filter documents added after this date (YYYY-MM-DD)"
                        }
                    ]
                }
            },
            "response": []
        },
        {
            "name": "Bulk Index",
            "request": {
                "method": "POST",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/api/index?older_than=2024-01-01",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "index"
                    ],
                    "query": [
                        {
                            "key": "older_than",
