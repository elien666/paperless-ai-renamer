                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "progress"
                    ],
                    "query": [
                        {
                            "key": "wait",
                            "value": "false",
                            "description": "Set to true for long polling (waits for job updates)"
                        },
                        {
                            "key": "job_id",
                            "value": "",
                            "description": "Optional: Specific job ID to track, or omit for all jobs",
                            "disabled": true
                        },
                        {
                            "key": "timeout",
                            "value": "30",
                            "description": "Timeout in seconds for long polling",
                            "disabled": true
                        }
                    ]
                }
            },
            "response": []
        },
